.shejishicontainer{
  height: 100%;
}
.img{
  width: 100%;
  height: 200px;
}
.shejishi-nav{
  background: #fff;
  height: 40px;
}
.shejishi-nav ul{
  display: flex;
  height: 30px;
  padding-left: 100px;
}
.shejishi-nav ul li{
  width: 60px;
  height: 30px;
  line-height: 30px;
  text-align: center;
  border-bottom: solid 1px #fff;
  font-size: 14px;
  box-sizing: border-box;
  margin-right: 50px;
}
.shejishi-nav ul li.active{
  border-bottom: solid 2px #d9a700;
  color: #d9a700;
}
