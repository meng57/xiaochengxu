
header{
  width: 100%;
  height: 30px;
  background-color: #ccc;
  display: flex;
}
.search{
  flex: 10;
  display: flex;
  flex-wrap: nowrap;
}
.pic1{
  width: 20px;
  height: 40px;
  flex: 1;
  height: 30px;
  line-height: 30px;
}
.pic2{
  width:30px;
  height: 30px;
  flex: 1;
}
.in{
  flex: 5;
  height:26px;
  width: 100px;
  color:green;
  font-size: 14px;
  line-height: 30px;
}
.message{
  flex: 1;
  width: 20px;
  height: 30px;
}
.navlist{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
.navlist li{
  width: 25%;
  height: 60px;
  text-align: center;
  display: flex;
  flex-direction: column;
  padding-top:5px;

}
.navlist image{
  width: 30px;
  height: 30px;
  flex: 1;
  margin: 0 auto;
}
.navlist b{
  flex: 1;
  font-size: 12px;
  margin-top: 10px;
}
.pic{
  width: 100%;
  position: absolute;
  left: 0;
  top: 0;
}
.new{
  position: relative;
}
.new b{
  position: absolute;
  left: 35%;
  top: 60px;
  font-size: 16px;
  color:#fff;
  z-index: 20;
}
.new span{
  position: absolute;
  left: 42%;
  top: 80px;
  font-size: 12px;
  color: #fff;
  z-index: 20;
  margin-top: 10px;
}
.new p{
  position: absolute;
  left: 41%;
  top: 100px;
  color: #fff;
  font-size: 12px;
  border: 1px solid #fff;
  z-index: 20;
  padding: 3px;
  margin-top: 10px;
}
.beijing{
  background: #000;
  opacity: 0.3;
  width: 100%;
  height: 240px;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 10;

}
.scroll-list{
  position: absolute;
  left: 0;
  top: 250px;
}
.scrollul{

  display: flex;
  flex-wrap: nowrap;
}
.new .scrollul li{
  position: relative;
}
.new .scrollul image{
  flex: 1;
  width: 120px;
  height: 120px;
}
.new1{
  position: absolute;
  left: 0;
  top: 540px;
}
